<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos en Tiempo Real</title>
    <!-- Agrega enlaces a tus estilos CSS aquÃ­ si es necesario -->
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Productos en Tiempo Real</h1>
        
        <!-- Formulario para agregar un nuevo producto -->
        <form id="agregarProductoForm" class="mb-4">
            <div class="form-row">
                <div class="col">
                    <input type="text" class="form-control" id="nombre" placeholder="Nombre del Producto">
                </div>
                <div class="col">
                    <input type="number" class="form-control" id="precio" placeholder="Precio">
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary">Agregar Producto</button>
                </div>
            </div>
        </form>

        <!-- Lista de productos -->
        <ul id="productList" class="list-group">
            {{#each productos}}
            <li class="list-group-item">
                {{this.nombre}} - ${{this.precio}}
                <button class="eliminarProducto btn btn-danger btn-sm float-right" data-id="{{this.id}}">Eliminar</button>
            </li>
            {{/each}}
        </ul>
    </div>

    <!-- JavaScript para manejar eventos de WebSocket y el formulario -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="/client.js"></script>
</body>
</html>
